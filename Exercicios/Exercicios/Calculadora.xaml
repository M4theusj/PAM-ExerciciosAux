<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercicios.Calculadora"
             Title="Calculadora">
    <VerticalStackLayout>
        <Label 
            Text="Resultado: "
            x:Name="Result" />

        <Entry
           Placeholder="0"
           x:Name="CalcEntry"
         />
        <Entry
           Placeholder="0"
           x:Name="CalcEntry2"
         />

        <Button
        Text="+"
        x:Name="Adicao"
        Clicked="Adicao_Clicked"/>

        <Button
        Text="-"
        x:Name="Subtracao"
        Clicked="Subtracao_Clicked"/>

        <Button
        Text="*"
        x:Name="Multiplicacao"
        Clicked="Multiplicacao_Clicked"/>

        <Button
        Text="/"
        x:Name="Divisao"
        Clicked="Divisao_Clicked"/>
    </VerticalStackLayout>
</ContentPage>