<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercicios.Randomico"
             Title="Randomico">
    <VerticalStackLayout>
        <Label 
            Text="Jogo da Adivinhação!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry
            Placeholder="Adivinhe um número"
            x:Name="EntryGuess"/>

        <Button
            Text="Confirmar"
            x:Name="ConfirmGuess"
            Clicked="ConfirmGuess_Clicked"/>
    </VerticalStackLayout>
</ContentPage>