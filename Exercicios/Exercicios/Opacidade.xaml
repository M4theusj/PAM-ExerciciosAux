<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercicios.Opacidade"
             Title="Opacidade">
    <VerticalStackLayout>
        <Label 
            Text="Opacidade"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image
            Source="bucas.jpg"
            Aspect="AspectFit"
            MaximumWidthRequest="200"
            HeightRequest="200"
            x:Name="BucasImg"
            />

        <Slider
            x:Name="OpcSlider"
            Minimum="0"
            Maximum="1"
            ValueChanged="OpcSlider_ValueChanged"/>
    </VerticalStackLayout>
</ContentPage>